<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
android:background="#F9FBE7"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/bundle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"

            android:text="MBs"
            android:textColor="#199342"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/fredtextfield"
            android:id="@+id/cost"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/fredtextfield"
            android:id="@+id/agentCost"/>


    </LinearLayout>



   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_marginRight="10dp">

       <Button
           android:id="@+id/deletebtn"
           android:layout_width="20dp"
           android:layout_height="29dp"
android:gravity="center"
android:layout_marginRight="10dp"
           android:layout_marginLeft="15dp"
           android:background="@drawable/deletesmall"

           android:textSize="20dp"
           android:textStyle="bold" />

       <Button
           android:id="@+id/editbtn"
           android:layout_width="20dp"
           android:layout_height="29dp"

android:gravity="center"
           android:layout_marginLeft="10dp"
           android:background="@drawable/editsmall"
           android:textSize="20dp"
           android:textStyle="bold"/>



   </LinearLayout>


</RelativeLayout>
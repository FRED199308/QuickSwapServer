<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Marketing">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:layout_marginBottom="10dp"
                android:text="Sending Mode"
                android:layout_marginRight="25dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sendMode"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/fredtextfield"
                android:layout_marginRight="25dp"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:layout_marginBottom="10dp"
                android:text="Sending ID"
                android:layout_marginRight="25dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/senderId"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/fredtextfield"
                android:layout_marginRight="25dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="Recipients"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/fredtextfield"
                    android:layout_marginBottom="10dp"
                    android:text="Recharging\n Numbers"
                    android:id="@+id/recharging"
                    android:layout_marginRight="25dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/paying"
                    android:text="Paying Numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/fredtextfield"
                    android:layout_marginRight="25dp"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="150dp"
                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                android:hint="notification title"
                android:id="@+id/title"/>

            <TextView
                android:layout_width="100dp"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"

                android:id="@+id/messageCounter"/>


        </LinearLayout>

        <EditText
            android:id="@+id/message"

            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#F1ECEC"

            android:gravity="left|top"
            android:hint="Message"

            android:inputType="textMultiLine" />

        <ProgressBar
            android:id="@+id/analysisProgressBar"
            android:layout_width="fill_parent"
            android:layout_height="30dp"

            android:layout_columnSpan="2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="#EE0087"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:visibility="invisible"

            android:max="100"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            /><!--// 50 default progress value-->


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_margin="15dp"
            android:text="Send"
            android:padding="10dp"
            android:id="@+id/sendBtn"
            android:backgroundTint="#00339b"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>



</LinearLayout>